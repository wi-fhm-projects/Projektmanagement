<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--12-col">
    <h5> Neuen Typ anlegen </h5>
    <hr>
    <%= form_for @kind, url: {action: "create"} do |f| %>

      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <input type="text" name="kind[name]" id="kind_name" class="mdl-textfield__input">
        <label class="mdl-textfield__label" for="project_title">Typ-Bezeichnung</label>
      </div>
      <br>
      <br>
      <%= f.submit "Erstellen", class: 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent mdl-color--indigo-500' %>
    <% end %><br>
    <%= link_to rbs_path, class: 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect' do %>Zur√ºck<%end%>
  </div>
</div>