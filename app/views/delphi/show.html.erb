<%= render partial: '/shared/header', locals: {project: @project, linkVariable: :back, section: 'Breitband-Delphi'} %>
<div class="mdl-tabs mdl-js-tabs mdl-js-ripple-effect">
  <div class="mdl-tabs__panel is-active" id="table-panel">
    <table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp wide-table" id="test2">
      <thead>
        <tr>
          <th class="mdl-data-table__cell--non-numeric">Projekt</th>
          <th class="mdl-data-table__cell--non-numeric">Arbeitspaket</th>
          <th class="mdl-data-table__cell--non-numeric">Angabe in</th>
          <th class="mdl-data-table__cell--non-numeric">Pessimistische Einschätzung</th>
          <th class="mdl-data-table__cell--non-numeric">Realistische Einschätzung</th>
          <th class="mdl-data-table__cell--non-numeric">Optimistische Einschätzung</th>
        </tr>
      </thead>
      <tbody>
          <tr class="first-level">
            <td class="mdl-data-table__cell--non-numeric"><%= @project.title %><%=@questionary.id%></td>
          </td>
            <td></td>
            <td class="mdl-data-table__cell--non-numeric"></td>
            <td class="mdl-data-table__cell--non-numeric"></td>
            <td class="mdl-data-table__cell--non-numeric"></td>
            <td class="mdl-data-table__cell--non-numeric"></td>
          </tr>
          <% @questionary.questions.each do |quest| %>
            <tr class="second-level">
              <td></td>
              <td class="mdl-data-table__cell--non-numeric">
                <%=quest.workpackage.subtask.task.name%> > <%=quest.workpackage.subtask.name%> > <%=quest.workpackage.name%>
              </td>
              <td class="mdl-data-table__cell--non-numeric">Mannstunden</td>
              <td class="mdl-data-table__cell--non-numeric">Durchschnitt: <%=quest.pessimistic_average%></td>
              <td class="mdl-data-table__cell--non-numeric">
                Durchschnitt: <%=quest.realistic_average%>
              </td>
              <td class="mdl-data-table__cell--non-numeric">
                Durchschnitt: <%=quest.optimistic_average%>
              </td>
            </tr>
              <% quest.responses.each do |response| %>
              <tr class="third-level">
                <td></td>
                <td class="mdl-data-table__cell--non-numeric">

                </td>
              <td class="mdl-data-table__cell--non-numeric"></td>
              <td class="mdl-data-table__cell--non-numeric"><%= response.pessimistic %></td>
              <td class="mdl-data-table__cell--non-numeric"><%= response.realistic %></td>
              <td class="mdl-data-table__cell--non-numeric"><%= response.optimistic %></td>
              </tr>
              <%end%>
          <% end %>
      </tbody>
    </table>
  </div>
</div>