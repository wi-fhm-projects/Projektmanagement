      </div>
      <div class="mdl-card__actions mdl-card--border">
        <%= link_to events_path(project: @project), class: 'mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect' do %>Anzeigen <%end%>
      </div>
    </div>
