<div class="mdl-grid">

  <div class="mdl-cell mdl-cell--12-col">
    <h5> Event bearbeiten </h5>
    <hr>
    <%= form_for @event, url: {action: "edit"} do |f| %>

    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <input class="mdl-textfield__input" id="event_number" name="event[number]" type="integer">
      <label class="mdl-textfield__label" for="event_number">
        <%= @event.number%>
      </label>
    </div>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <input type="date" name="event[startDate]" id="event_startDate" class="mdl-textfield__input">
      <label class="mdl-textfield__label" for="event_startDate">
        <%= @event.startDate%>
      </label>
    </div>
    <br>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <input type="text" name="event[title]" id="event_title" class="mdl-textfield__input">
        <label class="mdl-textfield__label" for="event_title">
          <%= @event.title%>
        </label>
      </div>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <input type="date" name="event[endDate]" id="event_endtDate" class="mdl-textfield__input">
        <label class="mdl-textfield__label" for="event_title">
          <%= @event.endDate%>
        </label>
      </div>

      <br>
      <br>
      <%= f.submit "Speichern", class: 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent mdl-color--indigo-500' %>
    <% end %><br>
    <%= link_to project_path(@event.project_id), class: 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect' do %>ZurÃ¼ck<%end%>
  </div>
</div>
