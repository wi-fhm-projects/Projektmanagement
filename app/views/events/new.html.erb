<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--12-col">
    <h5> Neues Event anlegen </h5>
    <hr>
    <%= form_for @event, url: {action: "create"} do |f| %>

      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <input type="text" name="event[title]" id="event_title" class="mdl-textfield__input">
        <label class="mdl-textfield__label" for="event_title">Event</label>
      </div>
      <br>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <input type="date" name="event[startDate]" id="event_startDate" class="mdl-textfield__input">
        <label class="mdl-textfield__label" for="event_startDate">Startzeitpunkt</label>
      </div>
      <br>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <input type="date" name="event[endDate]" id="event_endtDate" class="mdl-textfield__input">
        <label class="mdl-textfield__label" for="event_title">Endzeitpunkt</label>
      </div>
      <%= f.hidden_field :project_id, value: @project.id %>

      <br>
      <br>
      <%= f.submit "Erstellen", class: 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent mdl-color--indigo-500' %>
    <% end %><br>
    <%= link_to events_path, class: 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect' do %>ZurÃ¼ck<%end%>
  </div>
</div>
