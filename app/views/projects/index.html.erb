<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--12-col">
    <h5> Meine Projekte </h5>
    <hr>
    <table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp wide-table" id="test2">
      <thead>
        <tr>
          <th class="mdl-data-table__cell--non-numeric">Projektnummer</th>
          <th class="mdl-data-table__cell--non-numeric">Titel</th>
          <th class="mdl-data-table__cell--non-numeric">Beschreibung</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td class="mdl-data-table__cell--non-numeric"><%= project.id %></td>
            <td class="mdl-data-table__cell--non-numeric"><%= project.title %></td>
            <td class="mdl-data-table__cell--non-numeric"><%= project.description %></td>
            <td>
              <%= link_to project, method: :delete, data: { confirm: 'Soll das Projekt wirklich gelöscht werden?' }, class: 'mdl-button mdl-js-button mdl-button--icon mdl-button--colored button-middle' do %>
                <i  id="delete" class="material-icons">delete</i>
                <div class="mdl-tooltip" for="delete">Projekt löschen</div>
              <% end %>
              <%= link_to project, class: 'mdl-button mdl-js-button mdl-button--icon mdl-button--colored button-middle' do %>
                <i id="folder_open" class="material-icons">folder_open</i>
                <div class="mdl-tooltip" for="folder_open">Methoden und Analysewerkzeuge anzeigen</div>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <%= link_to new_project_path , class: 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent mdl-color--indigo-500' do %>
      <i class="material-icons">add</i> Neues Projekt
    <% end %>
  </div>
</div>
