  <header class="mdl-layout__header project-header">
    <div class="mdl-layout__header-row">
      <!-- Title -->
    <span class="mdl-layout-title">
      <%= link_to projects_path , class: 'mdl-button mdl-js-button mdl-button--fab mdl-button--mini-fab mdl-button--colored mdl-color--indigo-500' do %>
      <i class="material-icons">keyboard_arrow_left</i>
      <% end %> <%= @project.title %>
    </span>
    <span class="project-description"><%=truncate(@project.description, :length => 120) %></span>
  </header>
<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--4-col">
    <!-- Product Breaktdown -->
    <div class="picture_pbs structure mdl-card mdl-shadow--2dp">
