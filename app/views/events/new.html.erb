<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--12-col">
    <h5>
      Neues Event anlegen
    </h5>
    <hr>
    <%= form_for @event, url: {action: "create"} do |f| %>

    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <input class="mdl-textfield__input" id="event_number" name="event[number]" type="integer">
      <label class="mdl-textfield__label" for="event_number">Eventnummer</label>
    </div>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <input class="mdl-textfield__input" id="event_startDate" name="event[startDate]" type="date">
      <label class="mdl-textfield__label" for="event_startDate">Startzeitpunkt</label>
    </div>

    <br>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <input class="mdl-textfield__input" id="event_title" name="event[title]" type="text">
      <label class="mdl-textfield__label" for="event_title">Eventtitel</label>
    </div>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <input class="mdl-textfield__input" id="event_endtDate" name="event[endDate]" type="date">
      <label class="mdl-textfield__label" for="event_title">Endzeitpunkt</label>
    </div>
    <%= f.hidden_field :project_id, value: @project.id %>

    <br>
    <br>
    <%= f.submit "Erstellen", class: 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent mdl-color--indigo-500' %>
    <% end %><br>
    <%= link_to events_path(project: @project), class: 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect' do %>ZurÃ¼ck<%end%>
  </div>
</div>
